//Mario, more confortable

#include <cs50.h>
#include <stdio.h>
int main(void)
{
    int n;
    do
    {
        n = get_int("Input height");
    }
    while ( n > 8 || n < 1); 
    //This will ask the user for another input if n is bigger than 8 or
    //smaller than 1
    
    //Total rows
    for (int i = 0; i < n; i++)
    {
        //Print spaces
        for ( int space = n - 1; space > i; space--)
        {
            printf(" ");
        }
       //Print hashes 
        for ( int hash = -1; hash < i; hash++)
            {
                printf("#");
            }
        //Printing the gap:
        printf("    ");
        
        //Printing the right piramid:
        
        for ( int hash = -1; hash < i; hash ++)
            {
                printf("#");
            }
        printf("\n");
    }
}
